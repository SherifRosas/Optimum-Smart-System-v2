{
  "version": 2,
  "buildCommand": "cd optimum-frontend/frontend && npm run build",
  "outputDirectory": "optimum-frontend/frontend/dist",
  "installCommand": "cd optimum-frontend/frontend && npm install --legacy-peer-deps --force",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}